# --- GCS Authentication ---
# Path to your GCP service account key (JSON).
# Required for reading GCS data or uploading reports.
export GCP_CREDS_PATH=/path/to/your/gcp_service_account.json

# Convenience alias used by local dev scripts and notebooks
export GOOGLE_APPLICATION_CREDENTIALS=$GCP_CREDS_PATH

# --- Report Output ---
# GCS bucket to upload HTML reports, plots, and XLSX artifacts.
# Leave unset to write reports to ./exports/ only (local-only mode).
export ANALYST_REPORT_BUCKET=gs://your-bucket-name

# Blob path prefix within the bucket.
# Reports land at: {bucket}/{prefix}/{session_ts}/{run_id}/{module}/
export ANALYST_REPORT_PREFIX=analyst_toolkit/reports

# --- MCP Resource/Template Timeout Guards ---
# Timeout (seconds) for resources/list and resources/read filesystem operations.
export ANALYST_MCP_RESOURCE_TIMEOUT_SEC=8

# If true, resources/templates/list returns URI templates.
# Default false avoids duplicate resource/template listings in some MCP clients.
export ANALYST_MCP_ADVERTISE_RESOURCE_TEMPLATES=false

# Timeout (seconds) for cockpit template loading calls.
export ANALYST_MCP_TEMPLATE_IO_TIMEOUT_SEC=8
